# Legal Document Analyzer Environment Configuration
# Copy this file to .env and set your actual values

# Required: OpenRouter API Key for AI analysis
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Environment
APP_ENV=development

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting (optional)
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_STORAGE_URI=memory://

# File Processing
MAX_FILE_SIZE_MB=50
TEMP_STORAGE_PATH=temp_uploads

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: Prometheus Metrics
ENABLE_PROMETHEUS=false

# Optional: HTTP Referer for OpenRouter
HTTP_REFERER=http://localhost:3000
APP_TITLE=Legal Analyser

# ----------------------------------------------------------------------
# Cache Configuration
# ----------------------------------------------------------------------
# If running backend locally (without Docker), set REDIS_HOST to localhost.
# If using Docker, this can be left commented out to default to 'redis'.
# ----------------------------------------------------------------------
REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=2
# REDIS_PASSWORD=